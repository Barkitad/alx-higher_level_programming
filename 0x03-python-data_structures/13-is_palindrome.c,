#include "lists.h"
/**
*is_palindorome - palindrome checker
*@head: head of list
*Return: 1 if palindrome  otherwise 
*/
int is_palindrome(listint_t **head)
{
int len = 0, i,j ,k;
listint_t *hold , *tail ,*temp;
if (*head == NULL || (*head)->next == NULL)
return (1);
temp = *head;
while (temp)
{
len++;
temp = temp->next;
}
temp = *head;
for (i = 0; i < len / 2; i++)
temp = temp->next;
for (i = 0; i < len / 2; i++)
{
hold = *head;
tail = temp;
for (j = 0; j < i; j++)
hold = hold->next;
 for (k = 0; k < (len-1) / 2; k++)
tail = tail->next;
if (tail->n != hold->n)
return (0);
}
return (1);
}
